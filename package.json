{
  "name": "aizas-fine-art",
  "version": "1.0.0",
  "description": "Aiza's Fine Art - Professional art portfolio and e-commerce platform",
  "main": "static/src/css/input.css",
  "scripts": {
    "dev": "npm run copy:images && npm run webpack:dev && npm run css:watch",
    "build": "npm run copy:images && npm run webpack:build && npm run css:build",
    "webpack:dev": "webpack --mode development --watch",
    "webpack:build": "webpack --mode production",
    "css:watch": "tailwindcss -i ./static/src/css/input.css -o ./static/dist/css/main.css --watch",
    "css:build": "tailwindcss -i ./static/src/css/input.css -o ./static/dist/css/main.css --minify",
    "copy:images": "cp -r static/src/images/* static/dist/images/ 2>/dev/null || mkdir -p static/dist/images",
    "copy:js": "cp -r static/src/js/* static/dist/js/ 2>/dev/null || mkdir -p static/dist/js && cp node_modules/gsap/dist/gsap.min.js static/dist/js/",
    "start": "python3 manage.py runserver 8001"
  },
  "keywords": [
    "art",
    "portfolio",
    "ecommerce",
    "django",
    "htmx",
    "tailwind"
  ],
  "author": "Aiza",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^11.0.0",
    "axios": "^1.6.0",
    "gsap": "^3.12.5",
    "lozad": "^1.16.0",
    "vanilla-lazyload": "^17.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-bundle-tracker": "^2.0.1",
    "webpack-cli": "^5.1.4"
  }
}
